{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts",
    "tsup.config.ts"
  ]
}
